{
  "diagnostic.signOffset": 9999999,
  "suggest.enablePreview": true,
  "suggest.noselect": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript", 
    "javascriptreact", 
    "typescript", 
    "typescriptreact", 
    "css", 
    "json",
    "haskell",
    "reason",
    "rust",
    "rescript",
    "gleam"
  ],
  "prettier.requireConfig": true,
  "prettier.disableLanguages": [],
  "prettier.disableSuccessMessage": true,
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    },
    "gleam": {
      "command": "gleam",
      "args": ["lsp"],
      "filetypes": ["gleam"],
      "rootPatterns": ["gleam.toml"],
      "trace.server": "verbose"
    },
    "rescript": {
      "enable": true,
      "module": "~/.vim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    } 
  }
}
