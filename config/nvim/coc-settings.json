{
  "diagnostic.signOffset": 9999999,
  "suggest.enablePreview": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript", 
    "javascriptreact", 
    "typescript", 
    "typescriptreact", 
    "css", 
    "json",
    "haskell"
  ],
  "prettier.requireConfig": true,
  "prettier.disableLanguages": [],
  "prettier.disableSuccessMessage": true,
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
}
