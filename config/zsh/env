export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=250"

export EDITOR=nvim

export FZF_TMUX=0
export FZF_DEFAULT_COMMAND='rg --files --hidden --glob "!.git" --glob "!esy.lock"'
